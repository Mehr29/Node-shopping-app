<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h1># <%= order.orderId._id %></h1>
                            <ul>
                                <% order.orderId.order.items.forEach(product => { %>
                                    <li><%= product.productId.title %> (<%= product.quantity %>)</li><a href="/orders/<%= order.orderId._id %>">Download Invoice</a>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>